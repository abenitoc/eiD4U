<div class="edit_student_application_flex sending_institution">


<div class="field field25">
  <div class="flex-container">
    <%= f.label :inst_sending_name, "Institution's name" %><br />
    <%= f.text_field :inst_sending_name, autofocus: true, autocomplete: "inst_sending_name", disabled: review %>
  </div>
</div>
  <div class="field field25">
    <div class="flex-container">
      <%= f.label :school_family_dpt, "School / faculty" %><br />
      <%= f.text_field :school_family_dpt, autofocus: true, autocomplete: "school_family_dpt", disabled: review %>
    </div>
  </div>
<div class="field ">
 <div class="flex-container">
  <%= f.label :erasmus_code, "Erasmus Code"%><br />
  <%= f.text_field :erasmus_code, autofocus: true, autocomplete: "erasmus_code", disabled: review %>
</div>
</div>

<div class="field field_inst_adress">
  <div class="flex-container">
    <%= f.label :inst_adress, "Address" %><br />
    <%= f.text_field :inst_adress, autofocus: true, autocomplete: "inst_adress", disabled: review %>
  </div>
</div>


<div class="field field50">
  <div class="flex-container">
    <%= f.label :dept_coordinator, "Dept. Coordinator" %><br />
    <%= f.text_field :dept_coordinator, autofocus: true, autocomplete: "dept_coordinator", disabled: review %>
  </div>
</div>


<div class="field field50">
 <div class="flex-container">
  <%= f.label :contact_person %><br />
  <%= f.text_field :contact_person, autofocus: true, autocomplete: "contact_person", disabled: review %>
</div>
</div>
<div class="field ">
  <div class="flex-container">
    <%= f.label :inst_telephone, "Telephone" %><br />
    <%= f.telephone_field :inst_telephone, autofocus: true, autocomplete: "inst_telephone", disabled: review, pattern: "\+\d*", placeholder: "Include country code (e.g. +34...)" %>
  </div>
</div>

<div class="field field50">
  <div class="flex-container">
    <%= f.label :inst_email, "E-mail" %><br />
    <%= f.email_field :inst_email, autofocus: true, autocomplete: "inst_email", disabled: review %>
  </div>
</div>
</div>
