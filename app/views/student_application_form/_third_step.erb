<div class="field">
  <%= f.label :academic_year %><br />
  <%= f.select :academic_year, [
    '2018-2019: Fall Semester',
    '2018-2019: Spring Semester',
    '2018-2019: Academic Year',
    '2019-2020: Fall Semester',
    '2019-2020: Spring Semester',
    '2019-2020: Academic Year',
    ] %>
</div>

<div class="field">
  <%= f.label :programme %><br />
  <%= f.select :programme, [
    'Eramus+ Studies',
    'Eramus+ Placement',
