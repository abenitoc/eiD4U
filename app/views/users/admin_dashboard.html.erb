<h2>Nominated users</h2>
<%= form_tag(create_nominee_path, :method=> :post) do %>
	<%= email_field_tag 'email' %>
	<%= submit_tag 'Save' %>
<%end%>
<table style="width:100%">
  <tr>
    <th>Email</th>
    <th>Resend email</th> 
    <th>Erase</th>
  </tr>
  <% nominees.each do |nominee| %>
  <tr>
    <td><%= nominee.email %></td>
    <td><%= button_to "Resend email", resend_email_path(:id => nominee.id), :method=> :post, form_class: "button"  %></td> 
    <td><%= button_to "Delete nominee", delete_nominee_path(:id => nominee.id), :method=> :delete, form_class: "button" %></td>
  </tr>
  <% end %>
</table>

