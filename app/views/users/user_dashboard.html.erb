<h1> User Dashboard </h1>
<div>
	<div>
		<div><%= label_tag :student_application_form%></div>
		<%= link_to "Student Application Form", student_application_form_path%>
	</div>

	<div>
		<div><%= label_tag :motivation_letter%></div>
		<%unless current_user.motivation_letter.blank? %>
			<%= link_to current_user.motivation_letter_file_name, current_user.motivation_letter.url%>
			<td><%= button_to "Delete motivation letter", user_file_delete_url(:id => current_user.id, :attachment => :motivation_letter), :method=> :delete, form_class: "button" %></td>
		<% else %>
			<%= form_for current_user, url: user_file_upload_path, html: { multipart: true }, :method => :POST do |form| %>
			  <%= form.file_field :motivation_letter %>
			  <%= form.submit "Upload" %>
			<% end %>
		<%end%>
	</div>
	<div>
		<div><%= label_tag :curriculum_vitae%></div>
		<%unless current_user.curriculum_vitae.blank? %>
