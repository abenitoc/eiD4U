			  <%= form.file_field :curriculum_vitae %>
			  <%= form.submit "Upload" %>
			<% end %>
		<% end %>
	</div>
	<div>
		<div><%= label_tag :transcript_of_records%></div>
		<%unless current_user.transcript_of_records.blank? %>
			<%= link_to current_user.transcript_of_records_file_name, current_user.transcript_of_records.url%>
			<td><%= button_to "Delete transcript of records", user_file_delete_url(:id => current_user.id, :attachment => :transcript_of_records), :method=> :delete, form_class: "button" %></td>
		<% else %>
			<%= form_for current_user, url: user_file_upload_path, html: { multipart: true }, :method => :POST do |form| %>
			  <%= form.file_field :transcript_of_records %>
			  <%= form.submit "Upload" %>
			<% end %>
		<% end %>
	</div>
	<div>
		<div><%= label_tag :learning_agreement%></div>
		<%unless current_user.learning_agreement.blank? %>
			<%= link_to current_user.learning_agreement_file_name, current_user.learning_agreement.url%>
			<td><%= button_to "Delete learning agreement", user_file_delete_url(:id => current_user.id, :attachment => :learning_agreement), :method=> :delete, form_class: "button" %></td>
		<% else %>
			<%= form_for current_user, url: user_file_upload_path, html: { multipart: true }, :method => :POST do |form| %>
			  <%= form.file_field :learning_agreement %>
			  <%= form.submit "Upload" %>
			<% end %>
		<% end %>
	</div>
</div>
<%= button_to "Log out", destroy_user_session_path, :method=> :delete, form_class: "button"%>