<h1 class="title">Complete your personal data</h1>


<%= form_for(resource, as: resource_name,  :html => {:class => 'new_user register'}, url: user_registration_path) do |f| %>
  <%= devise_error_messages! %>
    <%= f.hidden_field :registration_token, {value: @nominated_user.registration_token}%>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" %>
  </div>

  <div class="field">
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family-name" %>
  </div>

  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_field :birth_date, autofocus: true, autocomplete: "bday" %>
  </div>

  <div class="field">
    <%= f.label :born_place %><br />
    <%= f.text_field :born_place, autofocus: true, autocomplete: "bornplace" %>
  </div>

  <div class="field">
  <%= f.label :sex %><br />
  <%= f.select :sex, [
    'Male',
    'Female',
    'Other'
    ] , autocomplete: "gender-identity"%>
</div>

  <div class="field">
    <%= f.label :permanent_adress %><br />
    <%= f.text_field :permanent_adress, autofocus: true, autocomplete: "street-address" %>
  </div>

  <div class="field">
    <%= f.label :nationality %><br />
    <%= f.select :nationality, country_list, autocomplete: "country-name" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "tel" %>
  </div>

<!--  <div class="field">
    <%#= f.radio_button :seeking_degree, true%>
    <%#= f.label :seeking_degree, "I am seeking double degree", :value => true  %>
    <%#= f.radio_button :seeking_degree, false, :checked => true %>
    <%#= f.label :seeking_degree, "I am not seeking double degree", :value => false %>
  </div>-->


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, value: @nominated_user.email, autofocus: true, readonly: true  %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "custom-button primary right" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
